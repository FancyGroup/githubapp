.index {
  display: flex;
  flex-direction: column;
  align-items: center; }
  .index-bg {
    width: 100%;
    height: 180px;
    background-color: #000;
    position: absolute;
    opacity: 0.7; }
  .index-wallpaper {
    background-color: transparent; }
  .index-header {
    margin-top: 116px;
    z-index: 10; }
    .index-header-img {
      height: 128px;
      width: 128px;
      border: 2px solid #fff;
      background-color: #88acdb;
      border-radius: 50%; }
  .index-main {
    text-align: center; }
  .index-username {
    display: block;
    color: #444;
    font-size: 30px;
    height: 80px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center; }
  .index-motto {
    display: block;
    color: #999;
    text-overflow: ellipsis;
    line-height: 25px;
    font-size: 16px; }
  .index-home-wrapper {
    margin-top: 10px;
    height: 60px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center; }
  .index-home {
    height: 32px;
    width: 32px;
    background: #cecece;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center; }
  .index-home-ic {
    width: 24px;
    height: 24px; }
  .index-nav {
    color: #444;
    font-size: 16px;
    line-height: 2;
    height: 140px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center; }
  .index-social {
    width: 200px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around; }
  .index-social-wrapper {
    height: 32px;
    width: 32px;
    background: #cecece;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center; }
  .index-social-ic {
    width: 24px;
    height: 24px; }
